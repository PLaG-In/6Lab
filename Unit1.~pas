procedure TForm1.Timer2Timer(Sender: TObject);
begin
timer1.Enabled:=false;
showmessage ('Jocul a luat sfarsit!');
timer2.enabled:=false;
showmessage ('Scorul este de ' + inttostr(x) + ' puncte. Felicitari! ');
x:=0;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
x:=0;
timer1.Enabled:=false;
timer2.Enabled:=false;
showmessage('Apasa oriunde pe forma pentru a incepe jocul. SUCCES!!! ');
end;


procedure TForm1.FormClick(Sender: TObject);
begin
timer2.enabled:=true;
timer1.enabled:=true;
x:=x-1;
label1.caption:='SCORUL: '+inttostr(x);
end;

end.
